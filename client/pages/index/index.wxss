@import "../../templates/auth/index.wxss";
/**index.wxss**/

.idcard {
  width: 200px;
  height: 126px;
  margin-top: 10px;
}

form input {
  border: 1px solid #eee;
  margin: 5px 0;
  padding: 5px;
  width: 300px;
  font-size: 14px;
}

form textarea {
  border: 1px solid #eee;
  width: 300px;
  min-height: 200px;
  margin: 5px 0;
  padding: 5px;
  font-size: 14px;
}

form button {
  width: 310px;
  margin: 10px 0 0;
  font-size: 14px;
}

button.comeon {
    width: 200rpx;
    height: 200rpx;
    background: red;
    line-height: 200rpx;
    border-radius: 100rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}